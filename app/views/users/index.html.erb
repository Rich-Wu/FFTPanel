<%= stylesheet_link_tag 'users' %>
<div class = "user" style = "grid-area: user; width: 85%; height: 87%; margin: auto; position: static;">
  <%= render 'shared/userCard' %>
</div>
<div style = "grid-area: menu;">
  <%= render 'shared/menu' %>
</div>
<div style = "grid-area: c;">
  <% @users.each do |user| %>
    <div class = "menu">
      <%= user.first_name %><br>
      <%= image_tag("/assets/portraits/#{user.avatar}") %>
    </div>
  <% end %>
</div>
<%= javascript_include_tag 'menus', 'data-turbolinks-track': 'reload' %>
