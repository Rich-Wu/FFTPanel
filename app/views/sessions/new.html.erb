<% if @error != nil %>
  <h2 style = "color: red;"><%= @error %></h2>
<% end %>
<%= form_tag(login_path, class: [:menu, :inputForm]) %>
<%= text_field_tag :email, nil, placeholder: "Email" %>
<%= password_field_tag :password, nil, placeholder: "Password" %>
<div style = "padding: 0; margin: auto;">
  <%= submit_tag "Log in" %>
</div>
